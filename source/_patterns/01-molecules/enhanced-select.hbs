<div id="enhanced-select" style="width: 200px; margin: 0 auto;">
    <pe-enhanced-select 
    v-model="selectValue" 
    placeholder="Select"
    multiple 
    filterable
    allow-create
    :loading="loading"
    >
    <pe-select-option
        v-for="item in options"
        :key="item.value"
        :label="item.label"
        :value="item.value"
        :disabled="false">
        <span style="float: left">{{ item.label }}</span>
        <span style="float: right; color: #8492a6; font-size: 13px">{{ item.value }}</span>
    </pe-select-option>
    </pe-enhanced-select>
