<script src="https://unpkg.com/vue/dist/vue.js"></script>
<div id="exercise">
  
  <p>VueJS is pretty cool - \{{ name }} (\{{ age }})</p>
  
  <p>\{{ ageMultiply() }}</p>
 
  <p v-once>\{{ randomFloat() }}</p>

  <div>
    <img style="width:100px;height:100px" v-bind:src="image">
  </div>

  <div>
    <input type="text" v-on:keyup="setValue">
    \{{ inputValue }}
  </div>
  <script>
    var foo = {{{json img.avatar}}};
    var bar = foo.src;
    new Vue({
        el: '#exercise',
        data: {
            name: "Brandon",
            age: 27,
            // image: "https://i.annihil.us/u/prod/marvel//universe3zx/images/b/bf/Acotilletta2--Iron_Fist_modern_green.jpg",
            image: bar,
            inputValue: "Default"
        },
        methods: {
            ageMultiply: function() {
                return this.age * 3;
            },
            randomFloat: function() {
                return Math.random();
            },
            setValue: function (event) {
                this.inputValue = event.target.value;
            }
        }
    });
  </script>
</div>